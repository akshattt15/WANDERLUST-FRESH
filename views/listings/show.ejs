<% layout("/layouts/boilerplate") %>

<div class="container my-5">

  <!-- Listing Card with all info inside -->
  <div class="row justify-content-center">
    <div class="col-12 col-md-6">
      <div class="card show-card shadow-sm">
        <!-- Image -->
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="Listing Image">

        <!-- Card Body -->
        <div class="card-body">
          <!-- Title -->
          <h3 class="listing-title mb-3 text-center"><%= listing.title %></h3>

          <!-- Published by -->
          <p class="text-center text-muted mb-3">
            Published by: <b><u><%= listing.owner ? listing.owner.username : "Unknown" %></u></b>
          </p>

          <!-- Description -->
          <p class="card-text mb-2"><%= listing.description %></p>

          <!-- Price & Country side by side -->
          <div class="d-flex justify-content-between mb-2">
            <span><strong>Price:</strong> &#8377;<%= listing.price.toLocaleString("en-IN") %></span>
            <span><strong>Country:</strong> <%= listing.country %></span>
          </div>

          <!-- Location -->
          <p class="mb-3"><strong>Location:</strong> <%= listing.location %></p>

          <!-- Edit/Delete Buttons -->
          <% if (currUser && listing.owner && currUser._id.equals(listing.owner._id)) { %>
            <div class="d-flex justify-content-center gap-3 mt-3 mb-2">
              <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark">EDIT</a>
              <form method="POST" action="/listings/delete/<%= listing._id %>?_method=DELETE">
                <button class="btn btn-danger">DELETE</button>
              </form>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <!-- Reviews Section -->
  <% if(currUser) { %>
    <div class="row justify-content-center mt-5">
      <div class="col-12 col-md-6">
        <h4 class="mb-3">Leave a Review</h4>
        <form action="/listings/<%= listing.id %>/reviews" method="POST">
          <fieldset class="starability-slot mb-3">
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" /><label for="first-rate1">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" /><label for="first-rate2">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" /><label for="first-rate3">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" /><label for="first-rate4">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" /><label for="first-rate5">5 stars</label>
          </fieldset>

          <div class="mb-3">
            <label for="comment" class="form-label">Comment</label>
            <textarea name="review[comment]" id="comment" rows="4" class="form-control"></textarea>
          </div>

          <button class="btn btn-outline-dark">Submit</button>
        </form>
      </div>
    </div>
  <% } %>

  <!-- All Reviews -->
  <% if(listing.reviews.length>0) { %>
    <div class="row justify-content-center mt-4">
      <div class="col-12 col-md-6">
        <h4 class="mb-3">All Reviews</h4>
        <% for(review of listing.reviews){ %>
          <div class="card mb-3 shadow-sm">
            <div class="card-body">
              <h5 class="card-title"><%= review.author ? review.author.username : "Unknown User" %></h5>
              <p class="card-text"><%= review.comment %></p>
              <p class="starability-result" data-rating="<%=review.rating%>">Rated: <%= review.rating %> stars</p>
              <% if(currUser && review.author && currUser._id.equals(review.author._id)) { %>
                <form method="POST" action="/listings/<%= listing._id %>/reviews/<%=review._id%>?_method=DELETE">
                  <button class="btn btn-sm btn-dark mt-2">DELETE</button>
                </form>
              <% } %>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  <% } %>

  <!-- Map Section -->
  <div class="row justify-content-center mt-5">
    <div class="col-12 col-md-6">
      <h4 class="mb-3">Where You Will Be</h4>
      <div id="map" class="w-100 rounded" style="height: 400px;"></div>
    </div>
  </div>

</div>

<script>
  window.mapboxToken = "<%= process.env.MAPBOX_TOKEN %>";
  window.listingData = {
    title: "<%= listing.title %>",
    location: "<%= listing.location %>",
    geometry: <%- JSON.stringify(listing.geometry) %>
  };
</script>
<script src="/js/map.js"></script>
<style>
.listing-title {
  font-size: 2rem;
  font-weight: 700;
  color: #b22222;
  text-shadow: 1px 1px 3px rgba(0,0,0,0.3);
}
.show-card {
  border-radius: 12px;
  overflow: hidden;
}
.show-img {
  height: 400px;
  object-fit: cover;
  width: 100%;
}
</style>
